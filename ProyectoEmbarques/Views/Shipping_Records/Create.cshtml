                    </div>

                    <div class="col-lg-3">
                        <div class="form-group">
                            <h4> Área </h4>
                            @(Html.Kendo().TextBox()
                                    .Name("AreaName")
                                    .HtmlAttributes(new { id = "AreaName", style = "width:90%", @readonly = "readonly" }) )
                        </div>
                    </div>

                    <div class="col-lg-3">
                        <div class="form-group">
                            <h4>Fecha de Embarque</h4>
