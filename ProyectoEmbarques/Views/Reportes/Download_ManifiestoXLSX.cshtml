@(Html.Kendo().Grid<ProyectoEmbarques.Models.Shipping_RecordsViewModel>
    ()
    .Name("grid")
    .ToolBar(tools =>
    { tools.Excel().Text("Exportar a EXCEL"); })
    .Columns(columns =>
    {
        columns.Bound(o => o.Shipping_Catalog_Products.ProductName).Title("No. Parte").Width(200);
        columns.Bound(o => o.RecordDescripcion).Title("Descripcion").Width(200);
        columns.Bound(o => o.RecordQuantity).Title("Cantidad").Width(200);
        columns.Bound(o => o.RecordPeso).Title("Peso").Width(200);
        columns.Bound(o => o.RecordObservaciones).Title("Observaciones").Width(200);
    })
    .Sortable()
    .Scrollable(scrollable => scrollable.Enabled(true))
    .Filterable()
    .Sortable()
    .Pageable()
    .Excel(ex => ex.FileName("Manifiesto.XLSX"))
    .HtmlAttributes(new { style = "height: 543px;" })
    .DataSource(dataSource => dataSource
    .Ajax()
    .Read(read => read.Action("Read", "EnsamblesRealizados"))
    .PageSize(100)
    )
)

