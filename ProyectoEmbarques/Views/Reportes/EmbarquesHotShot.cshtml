
        @(Html.Kendo().Grid<ProyectoEmbarques.Models.Shipping_RecordsViewModel>()
                            .Name("grid")
                             .ToolBar(tools =>
                             { tools.Pdf().Text("Exportar a PDF"); })
                       .Columns(columns =>
                       {
                           columns.Bound(o => o.RecordDate).Width(200);
                           columns.Bound(o => o.Shipping_Catalog_Products.ProductName).Width(200);
                           columns.Bound(o => o.RecordQuantity).Width(200);
                           columns.Bound(o => o.RecordSerialNo).Width(200);
                           columns.Bound(o => o.Clients.ClientName).Width(200);
                           columns.Bound(o => o.Clients.ClientAddress).Width(200);
                           columns.Bound(o => o.RecordFedexTracking).Width(200);
                           columns.Bound(o => o.Shipping_Catalog_Products.ProductType).Width(200);
                           columns.Bound(o => o.RecordServiceType).Width(250);
                       })
                       .Sortable()
                       .Scrollable(scrollable => scrollable.Enabled(true))
                       .Filterable()
                       .Sortable()
                       .Pageable()
                       .Pdf(ex => ex.FileName("File.PDF"))
                       .HtmlAttributes(new { style = "height: 543px;" })
                       .DataSource(dataSource => dataSource

                           .Ajax()
                            .Read(read => read.Action("Read", "EnsamblesRealizados"))
                           .PageSize(100)
                        )
        )
