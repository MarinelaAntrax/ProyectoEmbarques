@(Html.Kendo().Grid<ProyectoEmbarques.Models.Shipping_RecordsViewModel>()
        .Name("grid")
            .ToolBar(tools =>
            { tools.Pdf().Text("Exportar a PDF"); })
                .Columns(columns =>
                {
                    columns.Bound(o => o.RecordDate).Width(200);
                    columns.Bound(o => o.Shipping_Catalog_Products.ProductName).Title("P/N").Width(200);
                    columns.Bound(o => o.RecordQuantity).Title("Qty").Width(200);
                    columns.Bound(o => o.RecordSerialNo).Title("No.Serial").Width(200);
                    columns.Bound(o => o.Clients.ClientName).Title("Attention").Width(200);
                    columns.Bound(o => o.Clients.ClientAddress).Title("Organization").Width(200);
                    columns.Bound(o => o.RecordFedexTracking).Title("Tracking Fedex").Width(200);
                    columns.Bound(o => o.Shipping_Catalog_Products.ProductType).Title("Material Type").Width(200);
                    columns.Bound(o => o.RecordServiceType).Title("Service").Width(250);
                })
                .Sortable()
                .Scrollable(scrollable => scrollable.Enabled(true))
                .Filterable()
                .Sortable()
                .Pageable()
                .Pdf(ex => ex.FileName("List of Parts  Hot Shot.PDF"))
                .HtmlAttributes(new { style = "height: 543px;" })
                .DataSource(dataSource => dataSource
                    .Ajax()
                    .Read(read => read.Action("Read", "EnsamblesRealizados"))
                    .PageSize(100)
                )
        )
