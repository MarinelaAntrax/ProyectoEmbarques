@{
    ViewBag.Title = "Ensambles";
}

<h2 class="page-header">@ViewBag.Title</h2>

<div class="telerik-controls">
    @(Html.Kendo().Grid<ProyectoEmbarques.Models.Shipping_Catalog_ProductsViewModel>()
                    .Name("grid")
                        .Sortable()
                        .ToolBar(tools =>
                        {
                            tools.Create().Text("Agregar Ensambles");
                        })
                                    .Editable(editable => editable.Mode(GridEditMode.PopUp).TemplateName("Ensambles"))
                                    .Pageable(x => x.Numeric(true)
                                    .PreviousNext(true)
                                    .Refresh(true)
                                    .ButtonCount(5))
                                    .DataSource(dataSource => dataSource
                                    .Ajax()
                                    .Model(model => model.Id(e => e.ProductID))
                                    .Events(events => events.Error("error_handler"))
                                    .Read(read => read.Action("Read", "Shipping_Catalog_Products"))
                                    .Create(create => create.Action("Create", "Shipping_Catalog_Products"))
                                    .Update(update => update.Action("Update", "Shipping_Catalog_Products"))
                                    .PageSize(100)
                                    )
                                        .Columns(columns =>
                                        {
                                            columns.Bound(o => o.ProductName).Title("Numero de parte de la pieza").Width(5);
                                            columns.Bound(o => o.AreaName).Title("Área").Width(5);
                                        })
                                        .Scrollable()
                                        .Filterable(ftb => ftb.Mode(GridFilterMode.Row))
                                        .HtmlAttributes(new { style = "height: 650px;" })
                                        .Events(e => { e.Edit("onEdit"); })
    )
</div>

@section Scripts{
    <script type="text/javascript">
        function error_handler(e) {
            if (e.errors) {
                var message = "Errors:\n";
                $.each(e.errors, function (key, value) {
                    if ('errors' in value) {
                        $.each(value.errors, function () {
                            message += this + "\n";
                        });
                    }
                });
                alert(message);
            }
        }
    </script>

    <script>
        function onEdit(e) {
            e.container.parent().find('.k-window-title').text(e.model.isNew() ? "Agregar Ensambles" : + $('#nombreproducto').val());
        }
    </script>
}

<style>
    .k-edit-form-container {
        width: 600px;
    }
</style>

