@{
    ViewBag.Title = "Ver Cliente";
}

<h2 class="page-header">@ViewBag.Title</h2>

<div class="telerik-controls">
    @(Html.Kendo().Grid<ProyectoEmbarques.Models.ClientesViewModel>()

                            .Name("grid")



                            .Columns(columns =>
                            {
                                columns.Bound(o => o.ClientName).Width(5);
                                columns.Bound(o => o.ClientAddress).Width(7);

                            })
                            .Sortable()
                            .Scrollable(scrollable => scrollable.Virtual(true))
                            .HtmlAttributes(new { style = "height: 300px;" })
                            .DataSource(dataSource => dataSource
                                .Ajax()
                                .PageSize(100)
                                .Read(read => read.Action("Read", "ClientesController"))
                             )
    )

</div>

<style>

    /*horizontal Grid scrollbar should appear if the browser window is shrinked too much*/
    #grid table {
        min-width: 500px;
    }
</style>
