@{
    ViewBag.Title = "Ver Cliente";
}

<h2 class="page-header">@ViewBag.Title</h2>
    @(Html.Kendo().Grid<ProyectoEmbarques.Models.ClientesViewModel>()
                            .Name("grid")
                            .Columns(columns =>
                            {
                                columns.Bound(o => o.ClientName).Title("Nombre del Cliente").Width(200);
                                columns.Bound(o => o.ClientAddress).Title("Direccion").Width(200);
                            })
                            .Sortable()
                            .Groupable()
                            .Scrollable(scrollable => scrollable.Virtual(true))
                            .Filterable(ftb => ftb.Mode(GridFilterMode.Row))
                            .HtmlAttributes(new { style = "height: 650px;" })
                            .DataSource(dataSource => dataSource
                                .Ajax()
                                .PageSize(100)
                                .Read(read => read.Action("Read", "Clientes"))
                             ) )
<style>
    /*horizontal Grid scrollbar should appear if the browser window is shrinked too much*/
    #grid table {
        min-width: 600px;
    }
</style>
